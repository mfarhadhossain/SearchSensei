{
  "manifest_version": 3,
  "name": "Search Sensei",
  "description": "A browser extension featuring two key privacy features: Sensitivity-Based Search Customization and Data Minimization Alerts.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search Sensei",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"]
    }
  ],
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "activeTab",
    "cookies",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": ["https://api.openai.com/*", "*://*.google.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["static/colorful-abstract-textured-background-design.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}
